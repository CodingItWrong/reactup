#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

npx create-react-app $1
cd $1

git init .
git add .
git commit -m "Create react app"

rm src/App.css \
   src/App.test.js \
   src/index.css \
   src/logo.svg
git add .
git commit -m "Remove boilerplate"

cp -r "${DIR}/template/src" .
git add .
git commit -m "Add sample code"

yarn add -D eslint \
            babel-eslint \
            eslint-config-prettier \
            eslint-plugin-cypress \
            eslint-plugin-import \
            eslint-plugin-jest \
            eslint-plugin-jsx-a11y \
            eslint-plugin-prettier \
            eslint-plugin-react \
            prettier
cp "${DIR}/template/.eslintrc.js" .eslintrc.js
cp "${DIR}/template/.prettierrc.js" .prettierrc.js
git add .
git commit -m "Add ESLint and Prettier"

yarn add -D cypress
git add .
git commit -m "Add Cypress"
